{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "OONI Pipeline API",
    "description": "This is the main API to access the OONI data pieline",
    "termsOfService": "http://api.ooni.io/tos.md",
    "license": {
      "name": "MIT"
    }
  },
  "host": "api.ooni.io",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/reports": {
      "get": {
        "description": "Returns all the reports that have been collected",
        "operationId": "findReports",
        "produces": [
          "application/json",
          "application/xml",
          "text/xml",
          "text/html"
        ],
        "parameters": [
          {
            "name": "country_code",
            "in": "query",
            "description": "country codes to filter by",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "csv"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of results to return",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "report response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Report"
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    },
    "/reports/{id}": {
      "get": {
        "description": "Returns a user based on a single ID, if the user does not have access to the pet",
        "operationId": "findReportById",
        "produces": [
          "application/json",
          "application/xml",
          "text/xml",
          "text/html"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of report to fetch",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "report response",
            "schema": {
              "$ref": "#/definitions/Report"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Report": {
      "required": [
        "probe_cc",
        "report_id",
        "test_name"
      ],
      "properties": {
        "backend_version": {
          "type": "string"
        },
        "input_hashes": {
          "type": "array", "items": "string"
        },
        "options": {
          "type": "string"
        },
        "probe_asn": {
          "type": "string"
        },
        "probe_cc": {
          "type": "string"
        },
        "probe_ip": {
          "type": "string"
        },
        "record_type": {
          "type": "string"
        },
        "report_filename": {
          "type": "string"
        },
        "report_id": {
          "type": "string"
        },
        "software_name": {
          "type": "string"
        },
        "software_version": {
          "type": "string"
        },
        "start_time": {
          "type": "string"
        },
        "test_name": {
          "type": "string"
        },
        "test_version": {
          "type": "string"
        },
        "data_format_version": {
          "type": "string"
        },
        "test_helpers": {
          "type": "string"
        }
      }
    }
  }
}
